<div class="block07design2 container">
    {{#block07}}
    <div class="row g-0 border">
        <div class="col-md-6">
            <div class="single-course" style = "background-image: url({{imgurl}});">
            {{#block07priceshow}}
                <div class="enrol">
                    {{cost}} {{currency}}
                </div>
            {{/block07priceshow}}            
            </div>
            <div class="d-flex align-items-end theme-bg text-white p-2">
                <div class="col-md-12" >
                    <span class="blog-tags" style = "font-weight: 600;">Updated {{update}}</span>
                </div>
            </div>    
        </div>
        <div class="col-md-6 p-3">
            <div class="d-flex align-items-start  text-white ">
                <h5 class="post-heading"><a href="{{courselink}}" class="text-decoration-none">
                    {{#block07shortname}}{{shortname}}{{/block07shortname}}
                    {{#block07fullname}}{{fullname}}{{/block07fullname}}</a>                
                </h5>
            </div>    
            <div>     
                <div class="post-content-text">{{#shortentext}} 250, {{{summary}}} {{/shortentext}}</div>
            </div>
            <div class="blog-btn" >
                <div class="blog-tags" style="display: inline-block;">
                    <i class="fa fa-chevron-circle-right"></i>
                    <a href="{{categorylink}}" class="text-decoration-none">{{categoryName}}</a>
                </div>
            </div>
        </div>
    </div>
    <div class="p-1"></div>
    {{/block07}}
 </div>          
